{
    "compilerOptions": {
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [ "ES2022", "dom"],
        "module": "ES2022",
        "moduleResolution": "node",
        "target": "ES2022",
        "skipLibCheck": true,
        "allowJs": true,
        "baseUrl": ".",
    },
    "exclude": [
        "node_modules",
    ],
    "include": [
        "**/*.ts"
    ]
}